<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>MvnJettyPlugin</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- war for web -->
    <packaging>war</packaging>

    <properties>
        <!-- https://stackoverflow.com/questions/42525139/maven-build-compilation-error-failed-to-execute-goal-org-apache-maven-plugins -->
        <!-- Maven build Compilation error : Failed to execute goal  -->
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <!--                err -->
                <!--                <groupId>org.mortbay.jetty</groupId>-->
                <!--                <artifactId>maven-jetty-plugin</artifactId>-->
                <!--                <version>7.0.0.pre5</version>-->
                <!--                <configuration>-->
                <!--                    <scanIntervalSeconds>1</scanIntervalSeconds>-->
                <!--                </configuration>-->

                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.4.20.v20190813</version>
                <configuration>
                    <webApp>
                        <!-- path for app localhost:8080/myApp/servletName -->
                        <contextPath>/myApp</contextPath>
                        <!-- The path to the web.xml file for your webapp -->
                        <!--                        <desriptor>src/main/webapp/WEB-INF/web.xml</desriptor>-->
                        <!-- The path from which Jetty serves static resources. Defaults to src/main/webapp -->
                        <!--                        <baseResource>src/main/webapp</baseResource>-->
                        <resourceBases>
                            <resourceBase>${project.build.directory}</resourceBase>
                            <resourceBase>src/main/webapp</resourceBase>
                        </resourceBases>
                    </webApp>
                    <scanIntervalSeconds>1</scanIntervalSeconds>
                    <classesDirectory>target/classes</classesDirectory>
                    <!-- https://stackoverflow.com/questions/2369851/hot-deploy-in-embedded-jetty -->
                    <!-- interval in seconds to scan the webapp for changes and restart the context if necessary.
                     Ignored if reload is enabled. Disabled by default. Default value is: 0. -->
                    <reload>automatic</reload>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- https://mvnrepository.com/artifact/javax.servlet/javax.servlet-api -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>4.0.1</version>
            <scope>provided</scope>
        </dependency>

    </dependencies>

</project>